<% total = 0 %>
<% @cart.cart_items.each do |cart_item| %>
  <% item = cart_item.item %>
  Producto = <%= item.title %> 
  Precio = <%=number_to_currency(item.price)%> 
  Cantidad = <%=cart_item.quantity%> 
  Subtotal = <%=number_to_currency(cart_item.quantity * cart_item.price) %>  
  <% total += cart_item.quantity * cart_item.price %>
<% end %>
Total = <%= number_to_currency (total) %>